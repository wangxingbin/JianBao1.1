<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginLeft="5dp">

    <include layout="@layout/base_toolbar"
        android:id="@+id/publish_include"/>

    <LinearLayout
        android:layout_below="@+id/publish_include"
        android:id="@+id/ll_01"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_jiianbao_biaoti"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="9"
            android:background="@null"
            android:textSize="13dp"
            android:hint="标题" />

        <ImageView
            android:id="@+id/im_et_x1"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@mipmap/zzq_xxx" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#c0c0c0"
        android:layout_marginTop="2dp"
        android:layout_below="@+id/ll_01"/>

    <LinearLayout
        android:id="@+id/ll_et"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_below="@+id/ll_01"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_jianbao_miaoshu"
            android:layout_width="0dp"
            android:layout_height="140dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_gravity="center"
            android:layout_weight="9"
            android:background="@null"
            android:hint="描述下你要拍卖的物品"
            android:textSize="13dp"/>

        <ImageView
            android:id="@+id/im_et_x2"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@mipmap/zzq_xxx" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#c0c0c0"
        android:layout_marginTop="2dp"
        android:layout_below="@+id/ll_et"/>


    <View
        android:id="@+id/vw_view"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_below="@+id/ll_02"
        android:layout_marginTop="15dp"
        android:background="#c0c0c0c0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@id/vw_view"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/a"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="2"
                android:gravity="center"
                android:text="价格" />

            <EditText
                android:id="@+id/et_jianbao_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="7"
                android:gravity="center"
                android:background="@null"
                android:textSize="13dp"
                android:hint="输入你的宝贝的价钱" />

            <ImageView
                android:id="@+id/im_et_x3"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@mipmap/zzq_xxx" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#c0c0c0"
            android:layout_marginTop="2dp"
            android:layout_below="@+id/a"/>

        <LinearLayout
            android:id="@+id/b"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="2"
                android:gravity="center"
                android:text="电话" />

            <EditText
                android:id="@+id/et_jianbao_number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="7"
                android:gravity="center"
                android:background="@null"
                android:textSize="13dp"
                android:hint="输入你的电话号码" />

            <ImageView
                android:id="@+id/im_et_x4"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@mipmap/zzq_xxx" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#c0c0c0"
            android:layout_marginTop="2dp"
            android:layout_below="@+id/b"/>

        <LinearLayout
            android:id="@+id/c"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="2"
                android:gravity="center"
                android:text="联系方式" />

            <EditText
                android:id="@+id/et_jianbao_email"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="7"
                android:gravity="center"
                android:background="@null"
                android:textSize="13dp"
                android:hint="QQ或微信或Email账号" />

            <ImageView
                android:id="@+id/im_et_x5"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@mipmap/zzq_xxx" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#c0c0c0"
            android:layout_marginTop="2dp"
            android:layout_below="@+id/c"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_jianbao_fabu"
            android:layout_width="360dp"
            android:layout_height="40dp"
            android:background="@drawable/btn_style_color"
            android:gravity="center"
            android:text="发布"
            android:textSize="20sp"
            android:textColor="@color/white"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_02"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ll_et"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rl_xx1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/takephoto_picture"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:src="@mipmap/zzq_pppp" />

            <ImageView
                android:id="@+id/im_x1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/zzq_xxh"
                android:visibility="invisible" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rl_xx2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">


            <ImageView
                android:id="@+id/takephoto_picture2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:src="@mipmap/zzq_pppp"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/im_x2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/zzq_xxh"
                android:visibility="invisible" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rl_xx3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">


            <ImageView
                android:id="@+id/takephoto_picture3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:src="@mipmap/zzq_pppp"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/im_x3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/zzq_xxh"
                android:visibility="invisible" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_xx4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">


            <ImageView
                android:id="@+id/takephoto_picture4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:src="@mipmap/zzq_pppp"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/im_x4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/zzq_xxh"
                android:visibility="invisible" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rl_xx5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">


            <ImageView
                android:id="@+id/im_x5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/zzq_xxh"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/takephoto_picture5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/zzq_pppp"
                android:visibility="invisible"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />

        </RelativeLayout>


    </LinearLayout>



</RelativeLayout>