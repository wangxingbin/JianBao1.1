<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.facebook.drawee.view.SimpleDraweeView
            android:layout_alignParentLeft="true"
            android:id="@+id/sdv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="80dp"
            android:padding="3dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:layout_gravity="center_vertical"
            fresco:placeholderImage="@mipmap/ic_launcher"
            fresco:placeholderImageScaleType="fitCenter"
            fresco:actualImageScaleType="focusCrop"
            fresco:failureImage="@mipmap/ic_launcher"
            fresco:failureImageScaleType="centerInside"
            fresco:roundAsCircle="true"
            />

        <TextView
            android:id="@+id/wuping_pel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:padding="3dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="3dp"
            android:text="手机号：11111111111"
            android:textIsSelectable="true"
            android:textSize="18sp" />

    </LinearLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e6e5e4" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="80dp"
            android:layout_gravity="center_vertical"
            android:text="手机号:"
            android:textIsSelectable="true"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/wuping_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="3dp"
            android:text="手机号：11111111111"
            android:textIsSelectable="true"
            android:textSize="18sp" />

    </LinearLayout>



    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e6e5e4" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/wuping_weixin1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="80dp"
            android:text="微信号:"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:visibility="visible"
            android:textIsSelectable="true"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/wuping_weixin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:layout_marginLeft="3dp"
            android:text="微信号：11111111111"
            android:textIsSelectable="true"
            android:textSize="18sp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:layout_gravity="center_vertical"
            android:visibility="visible" />

    </LinearLayout>


    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e6e5e4" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/wuping_qq1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:layout_marginLeft="80dp"
            android:text="Q Q："
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:layout_gravity="center_vertical"
            android:visibility="visible"
            android:textIsSelectable="true"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/wuping_qq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Q   Q：11111111111"
            android:textIsSelectable="true"
            android:textSize="18sp"
            android:padding="3dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="3dp"
            android:visibility="visible" />

    </LinearLayout>


    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e6e5e4"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/wuping_email1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="80dp"
            android:text="Email:"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:textIsSelectable="true"
            android:visibility="visible"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/wuping_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email：11111111111"
            android:textIsSelectable="true"
            android:textSize="20sp"
            android:padding="3dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="3dp"
            android:visibility="visible" />

    </LinearLayout>


</LinearLayout>
